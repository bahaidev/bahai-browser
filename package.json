    "eslint-plugin-standard": "^4.1.0",
    "eslint-plugin-testcafe": "^0.2.1",
    "eslint-plugin-unicorn": "^44.0.2",
    "fast-json-patch": "3.1.1",
    "json-metaschema": "1.3.0",
    "json-refs": "^3.0.15",
    "mocha": "^10.1.0",
    "npm-run-all": "^4.1.5",

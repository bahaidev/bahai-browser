{
  "compilerOptions": {
    "lib": ["es2022", "DOM", "DOM.Iterable", "webworker"],
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "paths": {
      "tippy.js": ["./external"]
    },
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "emitDeclarationOnly": false,
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "skipLibCheck": true,
    "target": "es2017",
    "outDir": "dist"
  },
  "include": [
    "*.js",
    "resources",
    "extraServers",
    "plugins",
    "test"
  ],
  "exclude": [
    "node_modules",
    "resources/user-instrumented.js"
  ]
}
